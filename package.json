{
  "name": "fractioncalc",
  "version": "1.2.4",
  "description": "FractionCalc",
  "main": "main.js",
  "author": "Ashyraffa <raffa3527@outlook.com>",
  "license": "GPL-3.0-only",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "npx electron-builder --win nsis",
    "build:linux": "electron-builder --linux deb AppImage"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "productName": "FractionCalc",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "fractioncalc.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "license.txt",
      "perMachine": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true
    },
    "linux": {
      "category": "Utility",
      "maintainer": "Ashyraffa <raffa3527@outlook.com>",
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "fractioncalc.png",
      "description": "A simple fraction calculator for Linux"
    }
  }
}
