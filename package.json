{
  "name": "fractioncalc",
  "version": "1.0.6",
  "description": "FractionCalc",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "productName": "FractionCalc",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
      "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "license.txt",
      "perMachine": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true
    }
  }
}
